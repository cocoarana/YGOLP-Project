            <label for="password2">Re-enter password:</label>
            <% if(locals.err6){ %>
                <% if(locals.err6 !== 0){ %>
                    <div class="inputGroup error">
                <% } else { %>
                    <div class="inputGroup">
                <% } %>
            <% } else { %>
                <div class="inputGroup">
            <% } %>

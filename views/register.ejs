                    <div class="inputGroup error">
                <% } else { %>
                    <div class="inputGroup">
                <% } %>
            <% } else { %>
                <div class="inputGroup">
            <% } %>
                <input type="text" name="name" id="name" required value = <%= (locals.name?locals.name:'') %>>
